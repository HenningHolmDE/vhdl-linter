{
  "name": "vhdl-linter",
  "main": "./dist/index.js",
  "version": "0.0.0",
  "description": "A typescript based linter for vhdl",
  "keywords": [],
  "repository": "https://github.com/atom/vhdl-linter",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "scripts": {
    "build": "tsc --project .",
    "lint": "tslint --project .",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "./node_modules/nodemon/bin/nodemon.js -e ts -w ./ -x npm run watch:serve",
    "watch:serve": "./node_modules/ts-node/dist/bin.js test/test.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "post-merge": "npm i && npm run build"
    }
  },
  "dependencies": {
    "@types/glob": "^7.1.1",
    "@types/prettyjson": "0.0.28",
    "atom-package-deps": "^4.6.2",
    "escape-string-regexp": "^1.0.5",
    "glob": "^7.1.3",
    "lite-event": "^1.0.5",
    "nodemon": "^1.18.4",
    "prettyjson": "^1.2.1",
    "threads": "^0.12.0",
    "typed-promisify": "^0.4.0"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "devDependencies": {
    "@types/atom": "^1.31.0",
    "@types/node": "^10.12.0",
    "husky": "^1.1.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.1.3"
  }
}
